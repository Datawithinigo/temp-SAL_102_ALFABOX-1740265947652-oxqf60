---
const services = [
  {
    title: "CrossFit",
    description: "Entrenamiento funcional de alta intensidad para mejorar tu condición física general."
  },
  {
    title: "Clases de Iniciación",
    description: "Aprende las técnicas básicas y movimientos fundamentales del CrossFit."
  },
  {
    title: "Open Box",
    description: "Espacio para practicar y mejorar tus habilidades."
  },
  {
    title: "Entrenamiento Personal",
    description: "Sesiones personalizadas con nuestros entrenadores certificados."
  }
];
---
<section id="servicios" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12 text-primary">Nuestras Clases</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow border border-primary">
          <h3 class="text-xl font-semibold mb-4 text-primary">{service.title}</h3>
          <p class="text-gray-600">{service.description}</p>
        </div>
      ))}
    </div>
  </div>

</section>


