<header class="fixed w-full top-0 z-50 transition-colors duration-300" id="header">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <div class="flex items-center">
      <a href="/" class="flex items-center space-x-2">
        <img src="/Logo.png" alt="Alfabox" class="header-logo" />
      </a>
    </div>
    
    <!-- Mobile Menu Button -->
    <button 
      class="md:hidden mobile-menu-btn"
      aria-label="Menu"
      aria-expanded="false"
      id="menuButton"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" 
           xmlns="http://www.w3.org/2000/svg">
        <path class="hamburger-icon" d="M3 12H21M3 6H21M3 18H21" 
              stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-8" id="desktopNav">
      <!-- <a href="/" class="text-gray-600 hover:text-primary transition-colors nav-link">INICIO</a> -->
      <a href="/alfabox" class="text-gray-600 hover:text-primary transition-colors nav-link">ALFA BOX</a>
      <!-- <a href="/#servicios" class="text-gray-600 hover:text-primary transition-colors nav-link">CLASES</a> -->
      <a href="/horarios" class="text-gray-600 hover:text-primary transition-colors nav-link">HORARIOS</a>
      <a href="/tarifas" class="text-gray-600 hover:text-primary transition-colors nav-link">TARIFAS</a>
      <!-- <a href="/alfabox#coaches" class="text-gray-600 hover:text-primary transition-colors nav-link">COACHES</a> -->
      <a href="/#contacto" class="text-gray-600 hover:text-primary transition-colors nav-link">CONTACTO</a>
    </nav>

    <!-- Mobile Navigation -->
    <nav class="mobile-nav" id="mobileNav" aria-hidden="true">
      <!-- <a href="/" class="mobile-link">INICIO</a> -->
      <a href="/alfabox" class="mobile-link">ALFA BOX</a>
      <!-- <a href="/#servicios" class="mobile-link">CLASES</a> -->
      <a href="/horarios" class="mobile-link">HORARIOS</a>
      <a href="/tarifas" class="mobile-link">TARIFAS</a>
      <!-- <a href="/alfabox#coaches" class="mobile-link">COACHES</a> -->
      <a href="/#contacto" class="mobile-link">CONTACTO</a>
    </nav>
  </div>
</header>

<style>
  /* Header Logo */
  .header-logo {
    @apply h-12 w-auto;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    @apply p-2 text-gray-600 transition-colors duration-300;
  }

  /* Mobile Nav (hidden by default, slides in when active) */
  .mobile-nav {
    @apply fixed top-[60px] left-0 w-full bg-black/95 backdrop-blur-md
           transform -translate-x-full transition-transform duration-300
           flex flex-col items-center space-y-4 py-6;
  }
  .mobile-nav.active {
    @apply translate-x-0;
  }
  .mobile-link {
    @apply text-gray-600 text-lg py-2 px-4 hover:text-primary transition-colors
           w-full text-center;
  }

  /* Optional: Scrolled Header Styles */
  .header-scrolled {
    @apply bg-white shadow-md;
  }
  .header-scrolled .mobile-menu-btn {
    @apply text-gray-600;
  }
  .header-scrolled .mobile-link {
    @apply text-gray-600 hover:text-primary;
  }
</style>

<script>
  const header = document.getElementById('header');
  const menuButton = document.getElementById('menuButton');
  const mobileNav = document.getElementById('mobileNav');
  const navLinks = document.querySelectorAll('.nav-link');
  const mobileLinks = document.querySelectorAll('.mobile-link');

  // Update header on scroll
  const updateHeader = () => {
    if (window.scrollY > 50) {
      header.classList.add('header-scrolled');
    } else {
      header.classList.remove('header-scrolled');
    }
  };

  // Toggle mobile menu
  const toggleMobileMenu = () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', !isExpanded);
    mobileNav.classList.toggle('active');
    mobileNav.setAttribute('aria-hidden', isExpanded);
  };

  // Close mobile menu when clicking a link
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileNav.classList.remove('active');
      menuButton.setAttribute('aria-expanded', 'false');
      mobileNav.setAttribute('aria-hidden', 'true');
    });
  });

  // Event listeners
  menuButton.addEventListener('click', toggleMobileMenu);
  window.addEventListener('scroll', updateHeader);
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 768) {
      mobileNav.classList.remove('active');
      menuButton.setAttribute('aria-expanded', 'false');
      mobileNav.setAttribute('aria-hidden', 'true');
    }
  });

  // Initial check
  updateHeader();
</script>