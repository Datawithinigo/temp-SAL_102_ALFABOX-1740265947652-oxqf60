const getClassStyle = (className) => {
  if (!className) return '';
  const bgColor = classColors[className];
  if (!bgColor) return '';
  const textColor = bgColor === '#6C757D' ? 'white' : 'black';
  return `background-color: ${bgColor}; color: ${textColor};`;
};

 
