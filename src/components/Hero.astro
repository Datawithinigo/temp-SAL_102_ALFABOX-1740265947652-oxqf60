</section>

<script>
  import Swiper from 'swiper';
  import { Autoplay, Pagination } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/pagination';

  // Initialize Swiper immediately but with requestAnimationFrame
  requestAnimationFrame(() => {
    new Swiper('.swiper', {
      modules: [Autoplay, Pagination],
      loop: true,
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      // Reduce initial load by loading minimum slides
      slidesPerView: 1,
      preloadImages: false,
      watchSlidesProgress: true,
    });
  });
</script>

<style>
  .swiper {
    width: 100%;
    height: 100%;
  }
  
  .swiper-slide {
    width: 100%;
    height: 100%;
  }
  
  :global(.swiper-pagination-bullet) {
    background: white;
  }
  
  :global(.swiper-pagination-bullet-active) {
    background: rgba(46,156,167,255);
  }
</style>